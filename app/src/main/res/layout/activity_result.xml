<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DEDA"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="quiz.example.kisokusei.ResultActivity">

    <TextView
        android:layout_width="114dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:background="#DCD8D8"
        android:gravity="center"
        android:text="結果"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="383dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:background="#F3EAEAEA"
        android:gravity="center"
        android:text="3 / 5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="トータルスコア : 333"
        android:textSize="20sp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:onClick="returnTop"
        android:text="もどる"
        android:textSize="18sp" />

</LinearLayout>